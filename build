#!/usr/bin/env luajit

local fatal = function(msg, ...)
  msg = msg:format(...)
  print("ERROR:", msg)
  os.exit(1)
end

--- @param cmd string
--- @param ... any
local run = function(cmd, ...)
  cmd = cmd:format(...)
  print()
  print(cmd)
  local exit_code = os.execute(cmd)
  if exit_code ~= 0 then
    fatal("exited with code %s", exit_code)
  end
end

run("rm -rf .build; mkdir .build")

run("cd deps/luajit; make")
run("mv deps/luajit/src/luajit lua")

run("gcc -static init.c -o init")

run [[
  (find core; echo 'init\nlua\nld-linux-x86-64.so.2\nlibc.so.6\nlibm.so.6\nlibgcc_s.so.1') | cpio -H newc -o > .build/init.cpio
]]
run("rm init lua")

run("rm -f deps/linux/.config; cp linux-config deps/linux/.config")
run('cd deps/linux; make isoimage FDARGS="initrd=/init.cpio" FDINITRD=../../.build/init.cpio')
run("mv deps/linux/arch/x86/boot/image.iso .build/image.iso")

run("qemu-system-x86_64 -cdrom .build/image.iso")
